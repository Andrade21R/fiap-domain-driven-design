package br.com.fiap.primeiro.projeto;

public class ExemploOperadoresAritmeticos {
	
	public static void main(String[] args) {
		// Calcular a área do triângulo
		double base = 6.5;
		double altura = 15.0;
		double area = (base * altura) / 2;
		System.out.println("Área do triângulo: " + area);
		
		// Calcular a média final (2 notas no primero semestre, valendo 40%)
		// média das 2 notas no seguindo semestre valendo 60%
		float nota1 = 10;
		float nota2 = 9;
		float nota3 = 8;
		float nota4 = 2;
		
		float media = (((nota1 * nota2) * 0.4f) + ((nota3 * nota4) * 0.6f)) / 4;
		System.out.println("Média do aluno: " + media);
	}
}
